// Factorial Iterativo

import time

def factorial_iterativo(n):
    resultado = 1
    for i in range(1, n + 1):
        resultado *= i
    return resultado

def main():
    n = int(input("Ingresa un número para calcular su factorial: "))
    inicio = time.time()
    resultado = factorial_iterativo(n)
    fin = time.time()
    print(f"Factorial de {n} (iterativo): {resultado}")
    print(f"Tiempo de ejecución: {fin - inicio:.8f} segundos")

if __name__ == "__main__":
    main()

// Factorial Recursivo

import time

def factorial_recursivo(n):
    if n == 0 or n == 1:
        return 1
    return n * factorial_recursivo(n - 1)

def main():
    n = int(input("Ingresa un número para calcular su factorial: "))
    inicio = time.time()
    resultado = factorial_recursivo(n)
    fin = time.time()
    print(f"Factorial de {n} (recursivo): {resultado}")
    print(f"Tiempo de ejecución: {fin - inicio:.8f} segundos")

if __name__ == "__main__":
    main()
